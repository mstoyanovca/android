<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mstoyanov.musiclessons"
    android:versionCode="11"
    android:versionName="2.4">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.SEND_EMAIL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <supports-screens
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:backupAgent=".backup.MusicLessonsBackupAgent"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:restoreAnyVersion="true"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StudentDetailsActivity" />
        <activity android:name=".EditStudentActivity" />
        <activity android:name=".AddLessonActivity" />
        <activity android:name=".LessonDetailsActivity" />
        <activity android:name=".EditLessonActivity" />
        <activity android:name=".ExportScheduleActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAILPVukc4oquVgdJuXzN8wye7jjRZWgUc288n4rw" />

        <provider
            android:name=".data.DataProvider"
            android:authorities="@string/authority"
            android:exported="false" />
    </application>

</manifest>